@model MvcMusicStore.Models.Album
@{
    ViewBag.Title = "专辑详细信息";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

@if (Model != null)
{
<h3><em>Detail</em></h3>
<fieldset>
    <legend>Album</legend>

    <div class="editor-label">
        <label for="GenreId">流派</label>
    </div>
    <div class="editor-field">@Model.Genre.Name</div>

    <div class="editor-label">
        <label for="ArtistId">艺术家</label>
    </div>
    <div class="editor-field">@Model.Artist.Name</div>

    <div class="editor-label">
        <label for="Title">标题</label>
    </div>
    <div class="editor-field">@Model.Title
    </div>

    <div class="editor-label">
        <label for="Price">单价</label>
    </div>
    <div class="editor-field">&#165;@Model.Price.ToString("f2")
    </div>

    <div class="editor-label">
        <label for="AlbumArtUrl">封面图片</label>
    </div>
    <div class="editor-field">
        <img src="@Url.Content("~/Images/Covers/"+Model.AlbumArtUrl)" title="@Model.Title" alt="@Model.Title" width="100" height="75" />
    </div>
</fieldset>
<p>
    <a class="bold" href="@Url.Action("Edit", new { id=Model.AlbumId})">编辑</a>&nbsp;&nbsp;
    <a class="bold" href="@Url.Action("Index")">Back to List</a>
</p>
}