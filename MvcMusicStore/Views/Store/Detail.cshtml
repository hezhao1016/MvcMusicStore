@model MvcMusicStore.Models.Album

@{
    ViewBag.Title = "专辑详细信息";
}

@if(Model != null)
{
    <p><img src="@Url.Content("~/Images/Covers/"+Model.AlbumArtUrl)" title="@Model.Title" alt="@Model.Title" width="100" height="75" /></p>
    <p><em>Album:</em> @Model.Title </p>
    <p><em>Genre:</em> @Model.Genre.Name </p>
    <p><em>Artist:</em> @Model.Artist.Name </p>
    <p><em>Price:</em> &#165;@Model.Price.ToString("f2")</p>

    <p class="button">
	    @Html.ActionLink("加入购物车","Add","ShoppingCart",new{id=Model.AlbumId},null)
    </p>
}